<% if @book.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @book.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<!--グリッドシステム  -->
<div class="row">
  <!-- 左カラム -->
  <div class="col-xs-4 col-md-3">
     <%= render 'books/left_column', user: @user, book: @book %>
  </div>
  <!-- 左カラムここまで -->

  <!-- 右カラムここから -->
  <div class="col-xs-8 col-md-9">

    <!-- 本の一覧 -->
    <div>
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
            <tr>
              <td>
               <!-- 後でやる　user image -->
               <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, fallback: "no_image.jpg" %>
              </td>
              <td><%= link_to book.title, book_path(book.id), class: "edit_book_#{book.id}" %></td>
              <td><%= book.option %></td>
            </tr>
          <% end %>
        </table>
      </div>

   <!-- 右カラムここまで -->
  </div>
</div>